{% extends "layout_admin.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block content %}
    {% block fos_user_content %}
        <div class="container">
            <div class="formWork">
                <div class="row">
                    <div class="col-12 col-md-9 mx-auto">
                        <h1>EDITER MON MOT DE PASSE</h1>
                    </div>
                    <div class="col-12 col-md-3 justify-content-end d-none d-lg-flex d-xs-none">
                        <a class="btn btn-warning w-500" href="{{ path('fos_user_profile_show') }}" role="button">
                            <i class="fas fa-arrow-left"></i>
                            Retour au profil
                        </a>
                    </div>
                </div>
                <hr class="p-3" width="90%">
                {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                {{ form_widget(form) }}
                <div class="row justify-content-center">
                    <div class="row">
                        <div class="col-12 mt-3">
                            <input class="btn btn-primary" type="submit"
                                   value="{{ 'change_password.submit'|trans }}"/>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="row">
                <div class="col-12 mx-auto d-flex justify-content-center d-lg-none">
                    <a class="btn btn-warning" href="/">
                        <i class="fas fa-arrow-left"></i>Retour Ã  l'accueil
                    </a>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}