{% include 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="default-form">
            <div class="row">
                <div class="col-12 col-md-9 mx-auto">
                    <h1>Création d'un lycée</h1>
                </div>
                <div class="col-12 col-md-3 justify-content-end d-none d-lg-flex d-xs-none">
                    <a class="btn btn-warning w-500" href="{{ path('admin_lycee_index') }}" role="button">
                        <i class="fas fa-arrow-left"></i>
                        Retour à la liste des lycées
                    </a>
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-12 col-md-6 mx-auto">
                    {{ form_start(form) }}
                    <div class="p-2">
                        {{ form_row(form.name) }}
                        {{ form_row(form.address) }}
                        {{ form_row(form.postalCode) }}
                        {{ form_row(form.city) }}
                        {{ form_row(form.departments) }}
                    </div>
                    <div class="d-flex justify-content-center pt-5">
                        <input class="btn btn-dark" type="submit" value="Ajouter un lycée"/>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12 mx-auto d-flex justify-content-center d-lg-none">
                    <a class="btn btn-warning" href="{{ path('admin_lycee_index') }}">
                        <i class="fas fa-arrow-left"></i>
                        Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
