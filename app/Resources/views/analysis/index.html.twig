{% extends 'layout_admin.html.twig' %}
{% block title %}Analyse | E-Maintenance{% endblock %}
{% block content %}
    <h1>Analyzes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for analysis in analyzes %}
            <tr>
                <td><a href="{{ path('admin_analysis_show', { 'id': analysis.id }) }}">{{ analysis.id }}</a></td>
                <td>{{ analysis.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_analysis_show', { 'id': analysis.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_analysis_edit', { 'id': analysis.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_analysis_new') }}">Create a new analysi</a>
        </li>
    </ul>
{% endblock %}
