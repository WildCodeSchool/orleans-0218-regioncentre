{% include 'layout_admin.html.twig' %}

{% block body %}
    <div class="container">
        {{ dump(sheets) }}
        <table class="table">
            <thead class="thead-light">
            <tr>
                <th scope="col">Création</th>
                <th scope="col">Lycée</th>
                <th scope="col">Ville</th>
                <th scope="col">Type de travaux</th>
                <th scope="col">Analyse de la demande</th>
                <th scope="col">labels</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for sheet in sheets %}
            <tr>
                <td width="auto">01/01/2018</td>
                <td width="auto">Nom de Lycée avec nom de personne</td>
                <td width="auto">Nom de Ville-avec-tirets</td>
                <td>{{ sheet.job.name }}</td>
                <td>Analyse de la demande avec un texte long qui prend de la place</td>
                <td class="text-right" width="auto">{% if sheet.urgent == true %}<span class="badge badge-pill badge-warning text-dark mx-1"> URGENT </span>{% endif %}<span class="badge badge-info mx-1">{{ sheet.status.name }}</span></td>
                <td width="3%"><button class="btn btn-sm btn-dark text-warning">Voir</button></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}