{% extends 'layout_admin.html.twig' %}

{% block content %}
    <h1>Metier</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ metier.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ metier.name }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_metier_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_metier_edit', { 'id': metier.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
