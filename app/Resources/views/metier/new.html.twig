{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <div class="container">
        <div class=" flex-row">
            <h1 class="d-flex justify-content-center">Ajout de MÃ©tiers</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-4 mx-auto order-1 order-md-0">
                {{ form_start(form) }}
                <div class="p-2">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="d-flex justify-content-center pt-5">
                    {{ form_widget(form) }}
                    <input type="submit" value="Create"/>
                </div>
                {{ form_end(form) }}

            </div>
            <div class="col-12 col-md-4 mx-auto order-0 order-md-1">
                <div class="p-2">

                    <ul>
                        {% for metier in metiers %}
                            <li>{{ metier.name }}</li>
                        {% endfor %}
                    </ul>

                </div>
            </div>
        </div>
        <div class="flex-row">
            <div class="d-flex justify-content-center">
                <a href="{{ path('metier_index') }}">Back to the list</a>
            </div>
        </div>
    </div>
{% endblock %}
