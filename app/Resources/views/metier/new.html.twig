{% include 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="formWork">
            <div class="row">
                <div class="col-12 col-md-9 mx-auto">
                    <h1>Ajout de Métiers</h1>
                </div>
                <div class="col-12 col-md-3 justify-content-end d-none d-lg-flex d-xs-none">
                    <a class="btn btn-lg btn-warning w-500" href="{{ path('admin_management') }}" role="button">
                        <i class="fas fa-arrow-left"></i>
                        Retour
                    </a>
                </div>
            </div>
            <div>
                <hr>
            </div>
            <div class="row">
                <div class="col-12 col-md-5 mx-auto order-1 order-md-0">
                    {{ form_start(form.name) }}
                    <div class="p-2">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="d-flex justify-content-center pt-5">
                        {{ form_widget(form) }}
                        <input class="btn btn-dark" type="submit" value="Ajouter un métier"/>
                    </div>
                    <div class="col-12 mx-auto d-flex justify-content-center d-lg-none">
                        <a class="btn btn-warning w-500" href="{{ path('admin_management') }}">
                            <i class="fas fa-arrow-left"></i>
                            Retour
                        </a>
                    </div>
                    {{ form_end(form.name) }}
                </div>
                <div class="col-12 col-md-5 mx-auto order-0 order-md-1">
                    <div class="pt-2">
                        <table class="table">
                            <tbody>
                            {% for metier in metiers %}
                                <tr>
                                    <td>{{ metier.name }}</td>
                                    <td>
                                        <a class="btn btn-edit" href="{{ path('admin_metier_edit', { 'id': metier.id }) }}">
                                            <span>Éditer </span>
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">

            </div>
        </div>
    </div>
{% endblock %}
