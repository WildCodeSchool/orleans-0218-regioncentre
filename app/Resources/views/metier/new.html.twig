{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <div class="container">
        <div class="formWork">
            <div class="row">
                <div class="col-12 col-md-8 mx-auto">
                    <h1>Ajout de Métiers</h1>
                </div>
                <div class="col-12 col-md-2 mx-auto">
                    <a class="btn btn-warning" href="{{ path('metier_index') }}">retour a l'acceuil</a>
                </div>
            </div>
            <div>
                <hr>
            </div>
            <div class="row">
                <div class="col-12 col-md-6 mx-auto order-1 order-md-0">
                    {{ form_start(form.name) }}
                    <div class="p-2">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="d-flex justify-content-center pt-5">
                        {{ form_widget(form) }}
                        <input class="btn btn-dark" type="submit" value="Ajouté"/>
                    </div>
                    {{ form_end(form.name) }}

                </div>
                <div class="col-12 col-md-4 mx-auto order-0 order-md-1">
                    <div class="pt-2">
                        <ul>
                            {% for metier in metiers %}
                                <li>{{ metier.name }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
