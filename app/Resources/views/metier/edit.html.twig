{% include 'layout_admin.html.twig' %}
{% form_theme edit_form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <div class="container">
        <div class="editFormWork">
            <div class="row">
                <div class="col-12 col-md-8 mx-auto">
                    <h1>Édition de {{ metier.name }}</h1>
                </div>
                <div class="col-12 col-md-2 mx-auto d-md-block d-none">
                    <a class="btn btn-warning" href="/">
                        Retour à l'accueil
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
            <div>
                <hr>
            </div>
            <div class="row">
                <div class="col-12 col-md-5 mx-auto order-1 order-md-0">
                    {{ form_start(edit_form.name) }}
                    <div class="p-2">
                        {{ form_row(edit_form.name) }}
                    </div>
                    <div class="row pt-2">
                        <div>
                            {{ form_start(edit_form) }}
                            <input class="btn btn-dark" type="submit" value="Éditer ce métier"/>
                            {{ form_end(edit_form) }}
                        </div>
                        <div class="col-4 ml-4">
                            <a href="#deleteModal" class="btn btn-danger" data-toggle="modal">Supprimer ce métier <i class="fas fa-trash-alt"></i></a>
                        </div>
                    </div>
                    {{ form_end(edit_form.name) }}
                </div>
                <div class="col-12 col-md-5 mx-auto order-0 order-md-1">
                    <div class="pt-2">
                        <table class="table">
                            <tbody>
                            {% for metier in metiers %}
                                <tr>
                                    <td>{{ metier.name }}</td>
                                    <td>
                                        <a class="btn btn-edit" href="{{ path('metier_edit', { 'id': metier.id }) }}">
                                            <span>Éditer </span>
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 mx-auto d-flex justify-content-center d-sm-block d-md-none">
                    <a class="btn btn-warning" href="/">
                        Retour à l'accueil
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </div>
        <div id="deleteModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Confirmation</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <p>Voulez-vous vraiment supprimer "{{ metier.name }}" ?</p>
                    </div>
                    <div class="modal-footer">
                        <div class="row mx-auto">
                            <div class="col-4 mr-4">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                            </div>
                            <div class="col-4 ml-4">
                                {{ form_start(delete_form) }}
                                <input class="btn btn-danger" type="submit" value="Supprimer">
                                {{ form_end(delete_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
